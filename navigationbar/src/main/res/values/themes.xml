<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.NavigationBar" parent="Theme.Base.NavigationBar">
        <item name="isNavigationBarTheme">true</item>
        <item name="windowNavigationBar">true</item>
        <item name="windowNavigationBarOverlay">false</item>
        <item name="navigationBarItemBackground">@android:color/transparent</item>
        <item name="navigationBarUpIndicator">@drawable/ic_up</item>
        <item name="navigationBarUpIndicatorText">@string/navigation_back</item>
        <item name="navigationBarSize">@dimen/default_navigation_bar_size</item>
        <item name="navigationBarStyle">@style/Widget.NavigationBar</item>
        <item name="android:windowNoTitle">true</item>
        <item name="navigationBarColorPrimary">@color/color_primary_reverse</item>
        <item name="navigationBarTextColorPrimary">@color/text_color_primary_reverse</item>
        <item name="navigationBarColorAccent">@color/color_accent_reverse</item>
        <item name="navigationDropdownStyle">@style/Widget.NavigationDropDown</item>
    </style>

    <style name="Theme.NavigationBar.Light" parent="Theme.Base.NavigationBar.Light">
        <item name="isNavigationBarTheme">true</item>
        <item name="windowNavigationBar">true</item>
        <item name="windowNavigationBarOverlay">false</item>
        <item name="navigationBarItemBackground">@android:color/transparent</item>
        <item name="navigationBarUpIndicator">@drawable/ic_up</item>
        <item name="navigationBarUpIndicatorText">@string/navigation_back</item>
        <item name="navigationBarSize">@dimen/default_navigation_bar_size</item>
        <item name="navigationBarStyle">@style/Widget.NavigationBar</item>
        <item name="android:windowNoTitle">true</item>
        <item name="navigationBarColorPrimary">@color/color_primary</item>
        <item name="navigationBarTextColorPrimary">@color/text_color_primary</item>
        <item name="navigationBarColorAccent">@color/color_accent</item>
        <item name="navigationDropdownStyle">@style/Widget.NavigationDropDown.Light</item>
    </style>


    <style name="Theme.NavigationBar.Light.DarkNavigationBar">
        <item name="navigationBarColorPrimary">@color/color_primary_reverse</item>
        <item name="navigationBarTextColorPrimary">@color/text_color_primary_reverse</item>
        <item name="navigationBarColorAccent">@color/color_accent_reverse</item>
    </style>
</resources>
<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.NavigationBar" parent="android:Widget">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextStyle">@style/TextAppearance.NavigationBar.Title</item>
        <item name="displayOptions">displayShowTitle</item>
        <item name="navigationTextStyle">@style/TextAppearance.NavigationBar.Navigation</item>
    </style>

    <style name="TextAppearance.NavigationBar.Title" parent="android:TextAppearance">
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TextAppearance.NavigationBar.Navigation" parent="android:TextAppearance">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>